# variable assignment

x = 100
y = 200
z = 300

print(x)
print(y)
print(z)

x = "Ramesh"
print(x)

# assigning the values to multiple variable in a single line
a,b,c = 20,30,40 #not recommended , poor readability

print(a)
print(b)
print(c)



# using id()


s1 = 100
s2 = 100


print(s1)
print(s2)

print(id(s1))
print(id(s2))

s1 = 300
print(id(s1))
print(id(s2))



