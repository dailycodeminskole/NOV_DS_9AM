# Intro to strings Data type
# anything under 
# ''
# " "
# ''' '''
# it will be considereed as a strings

name  = "Nilesh"
print(name)
print(type(name)) #<class 'str'>



x = 100
print(type(x)) #<class 'int'>


pi = 3.1417
print(type(pi)) #<class 'float'>


z = "100"
print(type(z)) #<class 'str'>

